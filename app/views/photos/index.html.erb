<div>
	<h1><%= @photos.count == 0 ? @user.first_name + " has no photos to show" : @user.first_name+"'s has #{@photos.count} photos"%></h1>
	
	<% if @user == current_user %>
		<%= link_to "Add Photo" , user_photos_path(@user),class: "btn btn-primary",style: "color:white;" %>
	<% end %>
	
	<div class="row">
		
		<% @photos.each do |photo| %>
			<div class="col-md-4">
				<div class="thumbnail">
					<%= link_to image_tag(photo.picture.url),user_photo_path(@user,photo)%>	
				</div>
				<%= render "partials/security_level",resource: photo %>
			</div>
		<% end %>
		
	</div>
</div>