<section>
	<div class="row">
		<section class="col-md-6" style="padding-right: 0;">
			<%= link_to "Add Photo", new_user_photo_path(current_user),class: "btn btn-primary",style: "color:white;width:100%;border-radius:0;" %>
		</section>
		<section class="col-md-6" style="padding-left: 0;">
			<%= link_to "Add Album" , new_user_album_path(current_user),class: "btn btn-primary",style: "color:white;width:100%;border-radius:0;" %>
		</section>
	</div>

	<div>
		<%= form_tag(user_posts_path(current_user),class:"form-group") do %>
			<%= fields_for :post do |ff|%>
				<%= ff.text_field :title, class: "form-control", placeholder: "Post Title..."%>
				<%= ff.text_area :body,class: "form-control",placeholder: "Post Body..."%>
				<div class="form-group">
				    <label>Security Setting</label>
				    <select name="securitylevel_id" class="form-control">
					    <% Securitylevel.all.each do |level| %>
					    	<option value="<%= level.id %>"><%= level.securitylevel %></option>
					    <% end %> 
				    </select>
				 </div>
				<%= ff.submit "New Post" ,class: "btn btn-primary",style: "color: white;"%>
			<% end %>
		<% end %>
	</div>	
</section>

<hr/>

<section id="activities">
	<% if @activity_feeds.count > 0 %>
		<% @activity_feeds.each do |activity_feed| %>
			<%= render "activity_feed", activity_feed: activity_feed %> 
		<% end %>
	<% else %>

	<h1>No Activity feeds to show</h1>

	<% end %>
</section> 
